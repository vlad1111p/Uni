package ub2a2;



public class Nachbarschaft {
	private boolean set;
	Nachbarschaft() {
		
	}

	 synchronized void setMoore() {
		settrue() ;
	}

	synchronized void setVonNeumann() {
		setf();
	}
	private void settrue() {
		 synchronized(this) {
		this.set=true;
	}}
	private void setf() {
		 synchronized(this) {
		
		this.set=false;{
		}
		}
	}

	public boolean getb() {
	
		return set;
	}
	
	


	
	}

